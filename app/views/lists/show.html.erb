

<div class="container">
  <div class="row">
    <div class="col-md-12 mt-3">
      <h2>Hello <%= current_user.first_name %> ðŸ‘‹</h2>
      <p>Welcome to Listy, the new home of your gift lists</p>
      <h4 class="mb-3">Manage: <%= link_to "Family lists", lists_path %></h4>


        <div class="card p-3 mb-3">
          <table>
            <p><%= @list.title %> ID: <%= @list.id  %> </p>
            <% @list.items.each do |item| %>

              <tr class="row-border">
                <td><%= item.item_name %></td>
                <td><%= item.description %></td>
                <td>Â£<%= item.price %></td>
                <td><a href="<%= item.link %>">Link</a></td>
                <td><%= render "lists/partial/update_item", list: @list, item: item %></td>
                <td><%= link_to list_item_path(@list, item), class: 'red', method: :delete, data: { confirm: 'Are you sure that you want to delete this item?' }, remote: true do %><i class="fas fa-times"></i><% end %></td>
              </tr>
            <% end %>
          </table>
        </div>

      <%= render "lists/partial/add_item" %>

    </div>
  </div>
</div>



